<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>

            <item>
                <shape>
                    <gradient
                        android:angle="90"
                        android:endColor="#ffffff"
                        android:startColor="#1fd7f7"
                        android:type="linear" />

                    <stroke android:width="0.33dp" android:color="#faf20f" />

                    <corners android:radius="1dp" />

                </shape>
            </item>

            <item android:right="10dp"
                android:top="5dp">

                <bitmap android:gravity="center_vertical|right"
                    android:src="@drawable/arrow_drop_down3" />

            </item>

        </layer-list>

    </item>

</selector>